@model IEnumerable<proje.Models.Kategoriler>

@{
    ViewBag.Title = "Index";
}

<h2>Kategoriler</h2>

<p>
    @Html.ActionLink("Yeni Kategori Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kategoriAdi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.kategoriAdi)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.kategoriId }) |
            @Html.ActionLink("Detay", "Details", new { id=item.kategoriId }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.kategoriId })
        </td>
    </tr>
}

</table>
